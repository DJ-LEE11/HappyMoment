<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/line_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_gray_frame"
        android:layout_margin="10dp">
        <com.uwork.happymoment.ui.CleanEditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="10dp"
            android:gravity="left|center_vertical"
            android:hint="请输入名字"
            android:maxLength="12"
            android:inputType="text"
            android:paddingLeft="1dp"
            android:singleLine="true"
            android:textColor="@color/text_color_01"
            android:textColorHint="@color/text_color_02"
            android:textSize="@dimen/text_size_14"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/tvModify"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:enabled="false"
        android:background="@drawable/selector_btn_yellow_commit"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="修改姓名"
        android:textColor="@color/white_color"
        android:textSize="14dp" />

</LinearLayout>
