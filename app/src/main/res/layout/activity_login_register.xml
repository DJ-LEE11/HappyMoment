<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.flyco.tablayout.CommonTabLayout
        android:layout_marginTop="10dp"
        android:id="@+id/commonTabLayout"
        app:tl_iconVisible="false"
        app:tl_indicator_color="@color/theme_color"
        app:tl_indicator_height="3dp"
        app:tl_indicator_margin_left="0dp"
        app:tl_indicator_margin_right="0dp"
        app:tl_tab_padding="3dp"
        app:tl_textSelectColor="#4d4d4d"
        app:tl_textUnselectColor="#4d4d4d"
        app:tl_textsize="17dp"
        app:tl_underline_color="@color/line_color"
        app:tl_underline_height="1dp"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
