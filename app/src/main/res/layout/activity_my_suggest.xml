<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_color"
    android:overScrollMode="never"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSoftware"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:text="软件问题"
                android:textColor="@color/white_color"
                android:textSize="@dimen/text_size_14"
                android:background="@drawable/selector_suggest_btn"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tvManage"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:text="管理服务"
                android:textColor="@color/white_color"
                android:textSize="@dimen/text_size_14"
                android:background="@drawable/selector_suggest_btn"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tvCustomer"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:text="售后服务"
                android:textColor="@color/white_color"
                android:textSize="@dimen/text_size_14"
                android:background="@drawable/selector_suggest_btn"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvLogistics"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:text="物流问题"
                android:textColor="@color/white_color"
                android:textSize="@dimen/text_size_14"
                android:background="@drawable/selector_suggest_btn"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tvOther"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:text="其他建议"
                android:textColor="@color/white_color"
                android:textSize="@dimen/text_size_14"
                android:background="@drawable/selector_suggest_btn"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="4dp"
                android:layout_height="20dp"
                android:background="#ec6267"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/text_color_01"
                android:text="您的建议（"
                android:layout_marginLeft="8dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_14"
                android:textColor="#ec6267"
                android:text="*" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/text_color_01"
                android:text="必填）"
             />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_gray_frame"
            android:layout_marginTop="6dp">
            <EditText
                android:id="@+id/etSuggest"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:background="@null"
                android:gravity="top"
                android:hint="感谢您对幸福+的支持...."
                android:inputType="text"
                android:maxLength="120"
                android:textColor="@color/text_color_01"
                android:textColorHint="@color/text_color_02"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="4dp"
                android:layout_height="20dp"
                android:background="#ec6267"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/text_color_01"
                android:text="您的联系方式（选填）"
                android:layout_marginLeft="8dp"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_gray_frame"
            android:layout_marginTop="6dp">

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="left|center_vertical"
                android:hint="请输入手机号码"
                android:inputType="phone"
                android:maxLength="11"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/text_color_01"
                android:textColorHint="@color/text_color_02"
                android:textSize="@dimen/text_size_14"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tvSend"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:enabled="false"
            android:background="@drawable/selector_btn_yellow_commit"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:text="提交"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white_color"
            android:textSize="14dp" />


    </LinearLayout>



</android.support.v4.widget.NestedScrollView>
