<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="31"
            android:textColor="#353b43"
            android:textSize="@dimen/text_size_18"/>

        <TextView
            android:id="@+id/tvMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3æœˆ"
            android:layout_marginLeft="3dp"
            android:textColor="@color/text_color_01"
            android:textSize="@dimen/text_size_14"/>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rlSinglePhotoContent"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="15dp">

            <ImageView
                android:id="@+id/ivSingle"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rlPhotoContent"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="15dp">

            <ImageView
                android:id="@+id/ivPhoto1"
                android:scaleType="centerCrop"
                android:layout_width="58dp"
                android:layout_height="58dp"
                />

            <ImageView
                android:id="@+id/ivPhoto2"
                android:scaleType="centerCrop"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_alignParentRight="true"
                />

            <ImageView
                android:id="@+id/ivPhoto3"
                android:scaleType="centerCrop"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_alignParentBottom="true"
                />

            <ImageView
                android:id="@+id/ivPhoto4"
                android:scaleType="centerCrop"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_marginLeft="5dp">
         <TextView
             android:id="@+id/tvContent"
             android:text="hahhahahahaha"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="@dimen/text_size_18"
             android:textColor="@color/text_color_01"
             android:maxLines="4"
             android:ellipsize="end"/>
         <TextView
             android:id="@+id/tvNumber"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="@dimen/text_size_12"
             android:textColor="@color/text_color_02"
             android:layout_alignParentBottom="true"
             android:paddingBottom="5dp"/>
     </RelativeLayout>
    </LinearLayout>
</RelativeLayout>