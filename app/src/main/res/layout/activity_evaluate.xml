<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/line_color"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="15dp">

            <ImageView
                android:id="@+id/ivOrder"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tvRoom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/text_color_01"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>


        <EditText
            android:id="@+id/etEvaluate"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:background="@null"
            android:gravity="top"
            android:hint="亲！您可以进行评论了,记录您所需要的内容~~"
            android:inputType="text"
            android:maxLength="120"
            android:textColor="@color/text_color_01"
            android:textColorHint="@color/text_color_02"
            android:textSize="@dimen/text_size_14" />


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="描述相符"
            android:textColor="@color/text_color_01"
            android:textSize="@dimen/text_size_14"/>

        <com.uwork.happymoment.ui.StarBarView
            android:id="@+id/starAccord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            app:space_width="10dp"
            app:star_height="20dp"
            app:star_hollow="@mipmap/ic_star_normal"
            app:star_isIndicator="false"
            app:star_max="5"
            app:star_orientation="horizontal"
            app:star_rating="0"
            app:star_solid="@mipmap/ic_star_select"
            app:star_width="20dp" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务态度"
                android:textColor="@color/text_color_01"
                android:textSize="@dimen/text_size_14"/>

            <com.uwork.happymoment.ui.StarBarView
                android:id="@+id/starAttitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                app:space_width="10dp"
                app:star_height="20dp"
                app:star_hollow="@mipmap/ic_star_normal"
                app:star_isIndicator="false"
                app:star_max="5"
                app:star_orientation="horizontal"
                app:star_rating="0"
                app:star_solid="@mipmap/ic_star_select"
                app:star_width="20dp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvSend"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:enabled="false"
        android:background="@drawable/selector_btn_yellow_commit"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="20dp"
        android:text="确定"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white_color"
        android:textSize="14dp" />

</RelativeLayout>
