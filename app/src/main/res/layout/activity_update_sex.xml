<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/line_color">

    <RelativeLayout
        android:id="@+id/rlMan"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/shape_gray_frame"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color_01"
            android:text="男"/>

        <ImageView
            android:id="@+id/ivMan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:src="@mipmap/ic_select_yellow"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlWoman"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/shape_gray_frame"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color_01"
            android:text="女"/>

        <ImageView
            android:id="@+id/ivWoman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:src="@mipmap/ic_select_yellow"/>

    </RelativeLayout>


    <TextView
        android:id="@+id/tvModify"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:enabled="false"
        android:background="@drawable/selector_btn_yellow_commit"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="修改性别"
        android:textColor="@color/white_color"
        android:textSize="14dp" />

</LinearLayout>
