<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_color"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"/>

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/commonTabLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        tl:tl_iconVisible="false"
        tl:tl_textSelectColor="@color/text_color_red"
        tl:tl_textUnselectColor="@color/text_color_01"
        tl:tl_textsize="@dimen/text_size_14"
        tl:tl_tab_padding="3dp"
        tl:tl_indicator_color="@color/text_color_red"
        tl:tl_indicator_height="3dp"
        tl:tl_indicator_margin_left="15dp"
        tl:tl_indicator_margin_right="15dp"
        android:layout_marginBottom="8dp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vpActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
